<% if poll.current_outcome %>
*<%= t(:"poll_common.outcome") %>*
<% if option = poll.current_outcome.poll_option %>
<% if poll.poll_option_name_format == 'iso8601' %>
Event: <%= poll.current_outcome.event_summary %>
Date: <%= format_iso8601_for_humans(option.name, @recipient.time_zone, @recipient.date_time_pref) %>
Location: <%= poll.current_outcome.event_location %>
<% end %>
<% end %>
<%= render_markdown(poll.current_outcome.statement, poll.current_outcome.statement_format) %>
*<%= t(:"poll_types.#{poll.poll_type}") %>*
<% end %>