<% url = local_assigns.fetch(:url, polymorphic_url(@event.eventable)) %>
<% message = local_assigns.fetch(:message, @event.recipient_message) %>
<% poll_type = @poll ? t("poll_types.#{@poll.poll_type}") : nil %>
<%= t("notifications.with_title.#{@event.kind}", actor: @event.user.name, title: "[#{@event.eventable.title}](#{url})", poll_type: poll_type, site_name: AppConfig.theme[:site_name]) %>
<% if message.present? %>
<%= raw render_plain_text(message) %>
<% end %>