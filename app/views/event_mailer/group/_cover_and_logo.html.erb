<% if group.present? %>
<% cover_url = (root_url.chomp('/') + (group.self_or_parent_cover_url(300) || '')) %>
<% logo_url = (root_url.chomp('/') + (group.self_or_parent_logo_url(128) || '')) %>
<table style="padding: 0; margin-bottom: 8px" class="container" role="presentation" cellpadding=0 cellspacing=0 border=0 width=600 height=150>
<tr>
    <td class="rounded" valign="bottom" style="background: url(<%=cover_url%>) #ffffff; background-size:cover; background-position:center;">
      <!--[if mso]>
        <img src="<%=cover_url%>" height="150" width="600">
      <![endif]-->
      <!--[if !mso]><!-->
        <% if group.logo_url %>
        <img class="rounded" style="width: 64px; height: 64px; margin-left: 8px; margin-bottom: 4px" src="<%=logo_url%>" height=64 width=64>
        <% end %>
      <!--<![endif]-->
    </td>
</tr>
</table>
<% end %>
